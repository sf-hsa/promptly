<div class="row-fluid">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= number_to_phone(@recipient.phone, :area_code => true) %>
  </h1>
</div>

<div class="row-fluid">

  <div class="span8">
    <div class="row-fluid">
      <div class="span12 headerSmall headerAqua">
        <span class="headerText">Recipient History</span>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12 conversation">
        <%= render(:partial => 'shared/show_conversation', :collection => @recipient.conversations, :as => :conversation) || 'No messages.' %>
      </div>
    </div>
  </div>

  <div class="span4 sidebar">
    <div class="row-fluid">
      <div class="span12 headerSmall headerAqua">
        <span class="headerText">Queued Reminders</span>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12 queued">
        <%= render(:partial => 'shared/queued_reminders', :collection => @recipient.reminders, :as => :reminder) || 'No queued reminders.' %>
      </div>
    </div>
  </div>

</div>
